    <!--Weekly Spending JS-->
    <script>
      let week = 1
      let weekTotal = 0;
      let weeks = localStorage.getItem("weeks") != null ? (localStorage.getItem("weeks") != undefined ? JSON.parse(localStorage.getItem("weeks")) : [  {} ,  {} , {} , {} ]) : [  {} ,  {} , {} , {} ]
      let amountBox = document.getElementById("amountBox")
      let category = "week-rent"
      
      function doUpdateMonth(){
        let mValues = weeks[week - 1]
        weekTotal = 0

        document.getElementById("week-rent").innerHTML = mValues["week-rent"] ?? 0
        weekTotal +=  parseFloat(mValues["week-rent"]?? 0) 
        document.getElementById("week-utilities").innerHTML = mValues["week-utilities"] ?? 0
        weekTotal +=  parseFloat(mValues["week-utilities"]?? 0) 
        document.getElementById("week-food").innerHTML = mValues["week-food"] ?? 0
        weekTotal += parseFloat(mValues["week-food"] ?? 0)  
        
        document.getElementById("week-transportation").innerHTML = mValues["week-transportation"] ?? 0
        weekTotal += parseFloat(mValues["week-transportation"] ?? 0)  
        document.getElementById("week-entertainment").innerHTML = mValues["week-entertainment"] ?? 0
        weekTotal += parseFloat(mValues["week-entertainment"] ?? 0)
        document.getElementById("week-savings").innerHTML = mValues["week-savings"] ?? 0
        weekTotal += parseFloat(mValues["week-savings"] ?? 0)
        document.getElementById("week-misc").innerHTML = mValues["week-misc"] ?? 0
        weekTotal += parseFloat(mValues["week-misc"] ?? 0)
        document.getElementById("week-total").innerHTML = weekTotal
      }


      document.getElementById("categorySelect").onclick = (e) =>{
        category = e.target.value
      }

      document.getElementById("weekSelect").onclick = (e) =>{
        week = parseInt(e.target.value)
        doUpdateMonth()
      }
      
      document.getElementById("addBtn").onclick = (e) =>{
        weeks[week - 1][category] = parseFloat(weeks[week - 1][category] ?? 0 ) + parseFloat(amountBox.value)
        localStorage.setItem("weeks",JSON.stringify(weeks))
        doUpdateMonth()
      }
      
      document.getElementById("clearBtn").onclick = (e) =>{
        weeks[week - 1][category] = 0
        localStorage.setItem("weeks",JSON.stringify(weeks))
        doUpdateMonth()
      }
      doUpdateMonth()
  </script>